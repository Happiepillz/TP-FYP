@model IEnumerable<TrainingSceneStage>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; ViewBag.Title = "TrainingSceneStage";}
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
<h2>TrainingSceneStage <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<a asp-action="AddTrainingSceneStage" class="btn btn-sm btn-primary">Add TrainingSceneStage</a>
<a asp-action="GetTrainingSceneStage" class="btn btn-sm btn-secondary">Get TrainingSceneStage</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead><tr><th>ID</th><th>Name</th><th>Description</th><th>Scene ID</th></tr></thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.TSStageID</td>
                <td>@r.TSStageName</td>
                <td>@r.TSStageDescription</td>
                <td>@r.TrainingSceneID</td>
                <td>
                    <a asp-action="UpdateTrainingSceneStage" asp-route-id="@r.TSStageID" class="btn btn-sm btn-primary">Update</a>
                </td>
                <td>
                    <form asp-action="DeleteTrainingSceneStage" method="post">
                        <input type="hidden" value="@r.TSStageID" name="TrainingSceneStageId" />
                        <button class="btn btn-sm bg-danger text-light">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>