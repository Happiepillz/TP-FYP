@model TrainingSceneStage
@{  Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Update a TrainingSceneStage";}
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
<h2>Update a TrainingSceneStage <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="TSStageID"></label>
        <input class="form-control" asp-for="TSStageID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="TSStageName"></label>
        <input class="form-control" asp-for="TSStageName" />
    </div>
    <div class="form-group">
        <label asp-for="TSStageDescription"></label>
        <input class="form-control" asp-for="TSStageDescription" />
    </div>
    <div class="form-group">
        <label asp-for="TrainingSceneID"></label>
        <input class="form-control" asp-for="TrainingSceneID" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (Model != null)
{
    <h2>TrainingSceneStage</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Name</th><th>Description</th><th>Scene ID</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.TSStageID</td>
                <td>@Model.TSStageName</td>
                <td>@Model.TSStageDescription</td>
                <td>@Model.TrainingSceneID</td>
            </tr>
        </tbody>
    </table>
}