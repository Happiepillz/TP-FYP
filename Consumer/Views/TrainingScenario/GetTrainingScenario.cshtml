@model TrainingScenario
@{ Layout = "~/Views/Shared/_Layout.cshtml"; ViewBag.Title = "Get TrainingScenario by Id";}
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
<h2>Get TrainingScenario by ID <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id">ID:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get TrainingScenario</button>
    </div>
</form>

@if (Model != null)
{
    <h2>TrainingScenario</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Name</th><th>Description</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.TrainingScenarioID</td>
                <td>@Model.TrainingScenarioName</td>
                <td>@Model.TrainingScenarioDescription</td>
            </tr>
        </tbody>
    </table>
}