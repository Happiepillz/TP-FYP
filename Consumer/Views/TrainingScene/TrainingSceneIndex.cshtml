@model IEnumerable<TrainingScene>
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "TrainingScene";
    }
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <h2>TrainingScene <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
    <a asp-action="AddTrainingScene" class="btn btn-sm btn-primary">Add TrainingScene</a>
    <a asp-action="GetTrainingScene" class="btn btn-sm btn-secondary">Get TrainingScene</a>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Name</th><th>Description</th><th>Patient ID</th><th>Scenario ID</th><th>Update</th><th>Delete</th></tr></thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.TrainingSceneID</td>
                    <td>@r.TrainingSceneName</td>
                    <td>@r.TrainingSceneDescription</td>
                    <td>@r.PatientID</td>
                    <td>@r.TrainingScenarioID</td>
                    <td>
                        <a asp-action="UpdateTrainingScene" asp-route-id="@r.TrainingSceneID" class="btn btn-sm btn-primary">Update</a>
                    </td>
                    <td>
                        <form asp-action="DeleteTrainingScene" method="post">
                            <input type="hidden" value="@r.TrainingSceneID" name="TrainingSceneId" />
                            <button class="btn btn-sm bg-danger text-light">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
