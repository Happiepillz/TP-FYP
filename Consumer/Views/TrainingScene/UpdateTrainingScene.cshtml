@model TrainingScene
@{Layout = "~/Views/Shared/_Layout.cshtml";
 ViewBag.Title = "Update a TrainingScene";}
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
<h2>Update a TrainingScene <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="TrainingSceneID"></label>
        <input class="form-control" asp-for="TrainingSceneID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="TrainingSceneName"></label>
        <input class="form-control" asp-for="TrainingSceneName" />
    </div>
    <div class="form-group">
        <label asp-for="TrainingSceneDescription"></label>
        <input class="form-control" asp-for="TrainingSceneDescription" />
    </div>
    <div class="form-group">
        <label asp-for="PatientID"></label>
        <input class="form-control" asp-for="PatientID" />
    </div>
    <div class="form-group">
        <label asp-for="TrainingScenarioID"></label>
        <input class="form-control" asp-for="TrainingScenarioID" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (Model != null)
{
    <h2>TrainingScene</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Name</th><th>Description</th><th>TrainingScene ID</th><th>Scenario ID</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.TrainingSceneID</td>
                <td>@Model.TrainingSceneName</td>
                <td>@Model.TrainingSceneDescription</td>
                <td>@Model.TrainingSceneID</td>
                <td>@Model.TrainingScenarioID</td>
            </tr>
        </tbody>
    </table>
}