@model TrainingInstance
@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Update a TrainingInstance";}

    <link rel="stylesheet" type="text/css" href="~/css/site.css">
<h2>Update a TrainingInstance <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="TrainingInstanceID"></label>
        <input class="form-control" asp-for="TrainingInstanceID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="TrainingInstanceDateTime"></label>
        <input class="form-control" asp-for="TrainingInstanceDateTime" />
    </div>
    <div class="form-group">
        <label asp-for="TrainingScenarioID"></label>
        <input class="form-control" asp-for="TrainingScenarioID" />
    </div>
    <div class="form-group">
        <label asp-for="UserID"></label>
        <input class="form-control" asp-for="UserID" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (Model != null)
{
    <h2>TrainingInstance</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Time</th><th>Scenario ID</th><th>User ID</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.TrainingInstanceID</td>
                <td>@Model.TrainingInstanceDateTime</td>
                <td>@Model.TrainingScenarioID</td>
                <td>@Model.UserID</td>
            </tr>
        </tbody>
    </table>
}