@model IEnumerable<TrainingInstance>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; ViewBag.Title = "TrainingInstance";}
    <link rel="stylesheet" type="text/css" href="~/css/site.css">           
<h2>TrainingInstance <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<a asp-action="AddTrainingInstance" class="btn btn-sm btn-primary">Add TrainingInstance</a>
<a asp-action="GetTrainingInstance" class="btn btn-sm btn-secondary">Get TrainingInstance</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead><tr><th>ID</th><th>Time</th><th>Scenario ID</th><th>User ID</th><th>Update</th><th>Delete</th></tr></thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.TrainingInstanceID</td>
                <td>@r.TrainingInstanceDateTime</td>
                <td>@r.TrainingScenarioID</td>
                <td>@r.UserID</td>

                <td>
                    <a asp-action="UpdateTrainingInstance" asp-route-id="@r.TrainingInstanceID" class="btn btn-sm btn-primary">Update</a>
                </td>
                <td>
                    <form asp-action="DeleteTrainingInstance" method="post">
                        <input type="hidden" value="@r.TrainingInstanceID" name="TrainingInstanceId" />
                        <button class="btn btn-sm bg-danger text-light">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>