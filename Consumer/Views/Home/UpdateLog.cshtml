@model Consumer.Models.ActivityLog
@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Update an Activity Log";}
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
<h2>Update a Reservation <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="UpdateLog" method="post">
    <div class="form-group">
        <label asp-for="ActivityLogID"></label>
        <input class="form-control" asp-for="ActivityLogID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ActivityDateTime"></label>
        <input class="form-control" asp-for="ActivityDateTime" />
    </div>
    <div class="form-group">
        <label asp-for="ActivityDataName"></label>
        <input class="form-control" asp-for="ActivityDataName" />
    </div>
    <div class="form-group">
        <label asp-for="ActivityDataValue"></label>
        <input class="form-control" asp-for="ActivityDataValue" />
    </div>
    <div class="form-group">
        <label asp-for="ActivityStatus"></label>
        <input class="form-control" asp-for="ActivityStatus" />
    </div>
    <div class="form-group">
        <label asp-for="User"></label>
        <input class="form-control" asp-for="User" readonly />
    </div>
    <div class="form-group">
        <label asp-for="TrainingInstanceID"></label>
        <input class="form-control" asp-for="TrainingInstanceID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="TSStageID"></label>
        <input class="form-control" asp-for="TSStageID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ActivityTypeID"></label>
        <input class="form-control" asp-for="ActivityTypeID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="DrugID"></label>
        <input class="form-control" asp-for="DrugID" readonly />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Reservation</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Name</th><th>Start Location</th><th>End Location</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.ActivityLogID</td>
                <td>@Model.ActivityDateTime</td>
                <td>@Model.ActivityDataName</td>
                <td>@Model.ActivityDataValue</td>
                <td>@Model.ActivityStatus</td>
                <td>@Model.UserId</td>
                <td>@Model.TrainingInstanceID</td>
                <td>@Model.TSStageID</td>
                <td>@Model.ActivityTypeID</td>
                <td>@Model.DrugID</td>
            </tr>
        </tbody>
    </table>
}
