@model Patient
@{ Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add a Patient";}

<link rel="stylesheet" type="text/css" href="~/css/site.css">

<h2>Add a Patient <a asp-action="PatientIndex" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddPatient" method="post">
    <div class="form-group">
        <label for="PatientNRIC">PatientNRIC:</label>
        <input class="form-control" name="PatientNRIC" />
    </div>
    <div class="form-group">
        <label for="PatientName">PatientName:</label>
        <input class="form-control" name="PatientName" />
    </div>
    <div class="form-group">
        <label for="Gender">Gender:</label>
        <input class="form-control" name="Gender" />
    </div>
    <div class="form-group">
        <label for="Status">Status:</label>
        <input class="form-control" name="Status" />
    </div>
    <div class="form-group">
        <label for="DateOfBirth">DateOfBirth:</label>
        <input class="form-control" name="DateOfBirth" />
    </div>
    <div class="form-group">
        <label for="Race">Race:</label>
        <input class="form-control" name="Race" />
    </div>
    <div class="form-group">
        <label for="Height">Height:</label>
        <input class="form-control" name="Height" />
    </div>
    <div class="form-group">
        <label for="Weight">Weight:</label>
        <input class="form-control" name="Weight" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Patient</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>NRIC</th><th>Name</th><th>Gender</th><th>Status</th><th>Date of birth</th><th>Race</th><th>Height</th><th>Weight</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.PatientID</td>
                <td>@Model.PatientNRIC</td>
                <td>@Model.PatientName</td>
                <td>@Model.Gender</td>
                <td>@Model.Status</td>
                <td>@Model.DateOfBirth</td>
                <td>@Model.Race</td>
                <td>@Model.Height</td>
                <td>@Model.Weight</td>
            </tr>
        </tbody>
    </table>
}