@model Patient
@{ Layout = "~/Views/Shared/_Layout.cshtml"; ViewBag.Title = "Update a Patient";}

<link rel="stylesheet" type="text/css" href="~/css/site.css">

<h2>Update a Patient <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="PatientID"></label>
        <input class="form-control" asp-for="PatientID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="PatientNRIC"></label>
        <input class="form-control" asp-for="PatientNRIC" />
    </div>
    <div class="form-group">
        <label asp-for="PatientName"></label>
        <input class="form-control" asp-for="PatientName" />
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <input class="form-control" asp-for="Gender" />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input class="form-control" asp-for="Status" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input class="form-control" asp-for="DateOfBirth" />
    </div>
    <div class="form-group">
        <label asp-for="Race"></label>
        <input class="form-control" asp-for="Race" />
    </div>
    <div class="form-group">
        <label asp-for="Height"></label>
        <input class="form-control" asp-for="Height" />
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input class="form-control" asp-for="Weight" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Patient</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>NRIC</th><th>Name</th><th>Gender</th><th>Status</th><th>Date of birth</th><th>Race</th><th>Height</th><th>Weight</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.PatientID</td>
                <td>@Model.PatientNRIC</td>
                <td>@Model.PatientName</td>
                <td>@Model.Gender</td>
                <td>@Model.Status</td>
                <td>@Model.DateOfBirth</td>
                <td>@Model.Race</td>
                <td>@Model.Height</td>
                <td>@Model.Weight</td>
            </tr>
        </tbody>
    </table>
}